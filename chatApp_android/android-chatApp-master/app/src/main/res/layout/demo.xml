            android:layout_height="wrap_content"
            android:layout_weight="0.3">

            <Button
                android:id="@+id/clientimain"
                android:layout_width="0dip"
                android:layout_weight="1" android:layout_height="fill_parent"/>



            <Button
                android:id="@+id/button1"
